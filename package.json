{
  "name": "next-template",
  "author": "@croutonn",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export",
    "start": "next start",
    "analyze": "yarn analyze:build && yarn analyze:open-client && analyze:open-server",
    "analyze:build": "cross-env ANALYZE=true yarn build",
    "analyze:open-client": "open .next/analyze/server.html",
    "analyze:open-server": "open .next/analyze/client.html",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint:script": "eslint . --ext ts --ext tsx --ext js",
    "lint:style": "stylelint '**/*.{js,jsx,ts,tsx}'",
    "lint-all": "yarn lint:script && yarn lint:style",
    "fix:script": "yarn lint:script --fix",
    "fix:style": "yarn lint:style --fix",
    "fix:all": "yarn lint:fix && yarn lint:fix",
    "test": "dotenv -e .env.local jest",
    "test:watch": "dotenv -e .env.local jest --watch",
    "test:coverage": "dotenv -e .env.local jest --coverage",
    "test-all": "yarn lint-all && yarn type-check && yarn test",
    "graphql:codegen": "dotenv -e .env.local graphql-codegen --config .graphqlrc.yml",
    "graphql:fetch-schema": "mkdir -p schemas && curl -o schemas/github.graphql https://developer.github.com/v4/public_schema/schema.public.graphql"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint-all",
      "yarn format"
    ]
  },
  "resolutions": {
    "graphql": "^15.4.0",
    "graphql-language-service-interface": "2.4.2",
    "**/@types/graphql-upload/graphql": "^15.4.0"
  },
  "dependencies": {
    "@mapbox/rehype-prism": "^0.5.0",
    "@next/bundle-analyzer": "^10.0.3",
    "@zeit/next-css": "^1.0.1",
    "front-matter": "^4.0.2",
    "graphql": "^15.4.0",
    "graphql-request": "^3.3.0",
    "i18next": "^19.8.4",
    "linaria": "^2.0.2",
    "lru-cache": "^6.0.0",
    "next": "^10.0.3",
    "next-compose-plugins": "^2.2.1",
    "next-seo": "^4.17.0",
    "polished": "^4.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.7.3",
    "rehype-react": "^6.1.0",
    "remark-html-katex": "^3.0.0",
    "remark-math": "^4.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.0.0",
    "swr": "^0.3.9",
    "unified": "^9.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@croutonn/eslint-config": "^1.0.14",
    "@graphql-codegen/cli": "^1.19.3",
    "@graphql-codegen/typescript": "^1.18.1",
    "@graphql-codegen/typescript-graphql-request": "^2.0.3",
    "@graphql-codegen/typescript-operations": "^1.17.12",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.15",
    "@types/lru-cache": "^5.1.0",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-preset-react-app": "^10.0.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.14.0",
    "graphql-codegen-plugin-typescript-swr": "^0.4.0",
    "graphql-config": "^3.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.0",
    "react-is": "^17.0.1",
    "stylelint": "13.3.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.1.2"
  }
}
