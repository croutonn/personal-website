{
  "name": "next-template",
  "author": "@croutonn",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "yarn translate && concurrently 'next dev' 'yarn translate:watch'",
    "build": "yarn translate && next build",
    "start": "next start",
    "translate": "next-translate",
    "translate:watch": "chokidar 'src/pages_/**/*.tsx' -c 'yarn translate'",
    "analyze": "yarn analyze:build && yarn analyze:open-client && analyze:open-server",
    "analyze:build": "cross-env ANALYZE=true yarn build",
    "analyze:open-client": "open .next/analyze/server.html",
    "analyze:open-server": "open .next/analyze/client.html",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint:script": "eslint . --ext ts --ext tsx --ext js",
    "lint:style": "stylelint '**/*.{js,jsx,ts,tsx}'",
    "lint-all": "yarn lint:script && yarn lint:style",
    "fix:script": "yarn lint:script --fix",
    "fix:style": "yarn lint:style --fix",
    "fix:all": "yarn lint:fix && yarn lint:fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test-all": "yarn lint-all && yarn type-check && yarn test",
    "build-sb": "build-storybook",
    "start-sb": "start-storybook -p 6006",
    "graphql:codegen": "dotenv -e .env.local graphql-codegen --config codegen.yml",
    "graphql:fetch-schema": "mkdir -p schemas && curl -o schemas/github.graphql https://developer.github.com/v4/public_schema/schema.public.graphql"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint-all",
      "yarn format"
    ]
  },
  "dependencies": {
    "@adobe/react-spectrum": "^3.5.0",
    "@mapbox/rehype-prism": "^0.5.0",
    "@next/bundle-analyzer": "^10.0.0",
    "@react-aria/ssr": "^3.0.1",
    "@zeit/next-css": "^1.0.1",
    "app-root-path": "^3.0.0",
    "dotenv": "^8.2.0",
    "front-matter": "^4.0.2",
    "globby": "^11.0.1",
    "graphql": "^15.4.0",
    "graphql-request": "^3.3.0",
    "linaria": "^2.0.0",
    "lru-cache": "^6.0.0",
    "next": "^10.0.0",
    "next-compose-plugins": "^2.2.0",
    "next-seo": "^4.15.0",
    "next-translate": "^0.19.3",
    "next-transpile-modules": "^4.1.0",
    "polished": "^4.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rehype-react": "^6.1.0",
    "remark-html-katex": "^3.0.0",
    "remark-math": "^4.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.0.0",
    "swr": "^0.3.7",
    "unified": "^9.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@croutonn/eslint-config": "^1.0.9",
    "@graphql-codegen/cli": "^1.19.0",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-graphql-request": "^2.0.2",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@storybook/addon-actions": "^6.0.27",
    "@storybook/addon-essentials": "^6.0.27",
    "@storybook/addon-links": "^6.0.27",
    "@storybook/addons": "^6.0.27",
    "@storybook/react": "^6.0.27",
    "@testing-library/react": "^11.1.0",
    "@types/jest": "^26.0.15",
    "@types/lru-cache": "^5.1.0",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-jest": "^26.6.1",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^10.0.0",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.12.1",
    "graphql-codegen-plugin-typescript-swr": "^0.3.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "react-is": "^17.0.1",
    "stylelint": "13.3.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.0.5"
  }
}
